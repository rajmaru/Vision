<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SignInActivity">

    <ImageView
        android:id="@+id/signin_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/signin_bg_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sample_image3" />

    <ImageView
        android:id="@+id/signin_bg_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img_gradient"
        app:layout_constraintBottom_toTopOf="@+id/signin_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signin_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:fontFamily="@font/bold"
        android:text="Everyone"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/signin_ott_icon1"
        app:layout_constraintStart_toStartOf="@+id/sigin_guideline" />

    <TextView
        android:id="@+id/signin_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-4dp"
        android:fontFamily="@font/bold"
        android:text="Endless Entertainment for"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/signin_title1"
        app:layout_constraintStart_toStartOf="@+id/sigin_guideline" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/signin_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sigin_guideline">

        <TextView
            android:id="@+id/signin_google_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="7dp"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text="Continue with Google"
            android:textColor="#FFEDEE"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/signin_google_ic"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/signin_google_ic"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_google"
            app:tint="#FFF0F1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/signin_ott_icon1"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginStart="-3dp"
        android:layout_marginBottom="18dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@id/signin_button"
        app:layout_constraintStart_toStartOf="@+id/sigin_guideline"
        app:srcCompat="@drawable/ott_icons1" />

    <ImageView
        android:id="@+id/sigin_ott_icon2"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="@+id/signin_ott_icon1"
        app:layout_constraintStart_toEndOf="@+id/signin_ott_icon1"
        app:layout_constraintTop_toTopOf="@+id/signin_ott_icon1"
        app:srcCompat="@drawable/ott_icons2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sigin_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <ImageView
        android:id="@+id/signin_logo"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="-7dp"
        android:layout_marginBottom="18dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/signin_title2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_logo_name" />

</androidx.constraintlayout.widget.ConstraintLayout>